{% extends 'admin/base.html.twig' %}
{%  block body   %}

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1> Les Réclamations
                    </h1>
                    <table id="example" class="table table-striped table-bordered" style="width:100%">

                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Numero de Telephone</th>
                            <th>Email</th>
                            <th>Type de  réclamation</th>
                            <th>Message</th>
                            <th>Date de création</th>
                            <th>priorite</th>
                            <th> Etat </th>
                        </tr>
                        </thead>
                        <tbody>

                        <tr  {% for r in reclamations %}>


                            <td> {{ r.nom }}</td>
                            <td> {{ r.numerotelephone }}</td>
                            <td> {{ r.Email }}</td>
                            <td> {{ r.typereclamation }} </td>
                            <td>{{ r.message }}</td>
                            <td> {{ r.date|date('d/m/Y') }} </td>
                            <td> {{ r.priorite }}</td>
                            <td>{% if r.Etat==1  %}
                                <a href="{{ path('repond',{'id':r.id}) }}"> Repondre </a>
                            {% else %}
                                Déja repondu
                                {% endif %}

                            </td>

                        </tr {% endfor %}>


                        </tbody>

                    </table>
                </div></div></div>
        <script>$(document).ready(function() {
                $('#example').DataTable();
            } );</script>





























{% endblock %}
