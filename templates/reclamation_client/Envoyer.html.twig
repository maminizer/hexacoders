            </div>


            <div>
                {{ form_label(form.Type_reclamation, 'Type de reclamation') }}<br />

                <div class='form-input'>
                    {{ form_widget(form.Type_reclamation) }}
                    {{ form_errors(form.Type_reclamation,) }}
                </div>
            </div>



             <div>
                {{ form_label(form.Date, 'Date de cr√©ation') }}<br />

                <div class='form-input'>
                    {{ form_widget(form.Date) }}
                    {{ form_errors(form.Date) }}
                </div>
            </div>



            <div>
                {{ form_label(form.Priorite, 'Priorite') }}<br />

                <div class='form-input'>
                    {{ form_widget(form.Priorite) }}
                    {{ form_errors(form.Priorite) }}
                </div>
            </div>

            <div>
                {{ form_label(form.Message, 'Message') }}<br />

                <div class='form-input'>
                    {{ form_widget(form.Message) }}
                    {{ form_errors(form.Message) }}
                </div>
            </div>









            {{ form_end(form) }}
        </form>

    </div>

{% endblock %}

