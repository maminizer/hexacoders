{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.firstname  }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.lastname  }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ user.nbrTel }}</td>
            </tr>
            <tr>
                <th>Email vérifier</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}"> <button type="button" id="PopoverCustomT-1" class="btn btn-primary btn-sm">Retour à liste</button></a>


    {{ include('user/_delete_form.html.twig') }}
