{% extends 'admin/base.html.twig' %}
{% block body %}
  <div class="col-md-12">
        <div class="main-card mb-3 card">
            <div class="card-header">List Coffrets

            </div>
            <div class="table-responsive">
             <form action="searchCataloguex" class="container">
                    <input type="text" class="form-control" placeholder="search" id="search3">
                </form>
                <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                    <thead>
                    <tr>
                        <th style="padding-left: 2%">Id</th>
                        <th>nom</th>
                        <th style="padding-left: 3%">description</th>
                        <th style="padding-left: 5%">image</th>
                        <th style="padding-left: 2%">prix</th>
                      
                      <th>products</th>
                      <th>Offre</th>
                    </tr>
                    </thead>
                    <tbody>
                 
                    {% for d in data %}

                    <tr>
                        <td class="text-center text-muted">{{ d.id }}</td>
                        <td>
                            <div class="widget-content p-0">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-left flex2">
                                        <div class="widget-heading">{{ d.nom }}</div>
                                       
                                    </div>
                                </div>
                            </div>
                        </td>
                          <td class="text-center text-muted">{{ d.description }}</td>
                     
                         <td>
                            <div class="widget-content p-0">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-left flex2">
                                        <div class="widget-heading"><img src="{{ asset('uploads/images/' ~ d.image) }}"  alt ="" style = "width:100px ; height:100px"></div>
                                       
                                    </div>
                                </div>
                            </div>
                        </td>
                          <td class="text-center text-muted">{{ d.prix }}</td>
                        
                        <td class="text-center text-muted">
                        <table>
                        {% for dd in d.getProductCoffrets()%}
                        <tr>
                        <td>
                        {{dd.title}}
                        <br/>
                        </td>
                      
                        </tr>
                        {% endfor %}
                        </table>
                        </td>
                             <td class="text-center text-muted">{{d.offre}}</td>
                        <td class="text-center">
                        <a href="{{ path('delete',{'id':d.id}) }}" class="btn btn-primary">supprimer</a>

                         <a href="{{ path('updateCoffrets',{'id':d.id}) }}" class="btn btn-success">modifier</a>

                            
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                   
                </table>
   <a href="{{ path('AjoutCoffrets')}}" class="btn btn-primary">ajouter Coffrets</a>
            </div>
        </div>
    </div>
     <link href="{{ asset('https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i') }}" rel="stylesheet">

  
    <script
src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
</script>
 
{% endblock %}