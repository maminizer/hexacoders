{% extends "base.html.twig" %}
{% block title %}
{% endblock %}

{% block body %}
	<script src="https://www.google.com/recaptcha/api.js" async defer></script>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel-login">
				<div class="panel-heading">
					<div class="row mb_20">
						<div class="col-xs-6">
							<a href="{{ path('app_login')}}" class="active" id="login-form-link">
								Login
							</a>
						</div>
						<div class="col-xs-6">
							<a href="{{ path('app_register')}}">
								Register
							</a>
						</div>
					</div>
					<hr>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="form-group">
							{% if error %}
								<div class="alert alert-danger" role="alert">
									<strong>
										{{error.messageKey()}}
									</strong>
								</div>
							{% endif %}
						</div>
						<div class="col-lg-12">

							<form id="login-form" action="#" method="post">
								<div class="form-group">
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control is-valid" required placeholder="Email" autofocus oninvalid="this.setCustomValidity('Email ne peut pas être vide')">
								</div>
								<div class="form-group">
									<input type="password" name="password" id="inputPassword" class="form-control is-invalid" required placeholder="Password">
								</div>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<div class="g-recaptcha" data-sitekey="6Ldo344aAAAAAMx1gqWork-4AZ9a1UXppWsFTPrn" name="recaptcha"></div>
								</br>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
											<button type="submit" class="btn btn-primary">
												Connexion
											</button>
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-lg-12">
											<div class="text-center">
												<span class="pull-right">
													<a data-toggle="modal" href="{{ asset('reset-password') }}">
														Mot de passe oublié?
													</a>
												</span>
											</div>
										</div>
									</div>
								</div>

								<input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}"/>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
