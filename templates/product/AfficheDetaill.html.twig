{% extends 'base.html.twig' %}
{% block body %}
    <div class="row mt_10 ">
        <div class="col-md-6">

            <div>
                <img src ="{{ asset('uploads/images/' ~ product.image) }}"
                     alt ="" >
            </div></div>
        <div class="col-md-6 prodetail caption product-thumb">
            <h4 data-name="product_name" class="product-name">{{ product.title }}</h4>
            <span></span>
            <span class="price mb_20"><span class="amount">{{ product.price| number_format(0, ',', ' ') }}<span class="currencySymbol">DT</span></span>
              </span>
            <hr>
            <ul class="list-unstyled product_info mtb_20">
                <li><label>Disponibilité :</label>
                    {% if product.enVente == '1' %}
                        <span>En Vente</span>
                    {% elseif product.enVente == '0' %}
                        <span>non disponible</span>
                    {% endif %}</li>
            </ul>
            <hr>
            <p class="product-desc mtb_30"> {{ product.description }} </p>
            <hr>
            <ul class="list-unstyled product_info mtb_20">
                <li><label>Quantité:</label>
                    <span> {{ product.quantity }}</span></li>
            </ul>
            <hr>
            <a> Ajout au Panier </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="exTab5" class="mtb_30">
                <ul class="nav nav-tabs">
                    <li class="active"> <a href="#1c" data-toggle="tab">Aperçu</a> </li>
                    <li><a href="#2c" data-toggle="tab">Commenter</a> </li>
                    <li><a href="#3c" data-toggle="tab">Commentaires</a> </li>
                </ul>
                <div class="tab-content mt_20">
                    <div class="tab-pane active" id="1c">
                        <p>{{ product.description }}</p>
                    </div>
                    <div class="tab-pane" id="2c">
                        {{ form_start(formCommentaire) }}
                        <div id="review"></div>
                        <h4 class="mt_20 mb_30">Écrire un commentaire</h4>
                        <div class="form-group required">
                            <div class="col-sm-12">
                                <label class="control-label" for="input-name">ID Utilisateur: </label>
                                <div > {{ form_widget(formCommentaire.user)   }} </div>
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-12">
                                <label class="control-label" for="input-name">ID Produits</label>
                                <div > {{ form_widget(formCommentaire.produit)   }} </div>
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-12">
                                <label class="control-label" for="input-review">Your Review</label>
                                {{ form_widget(formCommentaire.contenu, {'attr' : { 'placeholder' : "contenu de commentaire"} })    }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="buttons pull-right">
                                <button type="submit" class="btn btn-md btn-link" >Continue</button>
                            </div>
                        </div>
                        {{ form_end(formCommentaire) }}
                    </div>
                    <div class="tab-pane" id="3c">
                        <table class="table">
                        {% for commentaire in product.commentaires %}
                           <tr>


                               <td>{{commentaire.contenu | raw}}</td>
                               <td>user id: {{ commentaire.user }}</td>
                               <td><a class=" js-like" role="button" type="submit" href="{{ path('commentaire_like', {'id':commentaire.id}) }}">
                                       {% if app.user and commentaire.isLikedByUser(app.user) %}
                                           <i class="fas fa-heart"></i>
                                       {% else %}
                                           <i class="far fa-heart"></i>
                                       {% endif %}
                                       <span class="js-likes">{{ commentaire.likes | length }}</span>
                                       <span class="js-label">J'aime</span>
                                   </a></td>
                               <td> <a href="{{ path('modifierCommentaire',{'id':commentaire.id}) }}" role="button" type="submit" > Modifier </a>
                                   <a  class="js-like" role="button" type="submit" href="{{ path('commentaireS', {'id':product.id}) }}">Supprimer</a></td>

                           </tr>


                        {% endfor %}
                           </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>




    <a href="{{ path('AfficheProduitClient') }}" class="btn" style="position: center;"> Retour</a>


    <script src="{{ asset('https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js') }}"></script>
    <script>
        function onClickBtnLike(event){
            event.preventDefault();

            const url = this.href;
            const  spanCount = this.querySelector('span.js-likes');

            axios.get(url).then(function (response){

                spanCount.textContent = response.data.likes;
            })

        }
        document.querySelectorAll('a.js-like').forEach(function (link){
            link.addEventListener('click', onClickBtnLike);
        })
    </script>
{% endblock %}
{% block javascripts %}

{% endblock %}